package edu.kh.varialbe.ex1;

public class VariableExample2 {

	public static void main(String[] args) {

		// 자바 기본 자료형 8가지 
		// 1. 논리형 : boolean(1byte)
		// 2. 정수형 : byte(1byte), short(2byte), int(4byte), long(8byte)
		// 3. 실수형 : float(4byte), double(8byte)
		// 4. 문자형 : char(2byte, 유니코드)
		
		// 변수 선언 : 메모리에 값을 저장할 공간을 할당하는
		// 변수 값 대입 : 변수에 값을 집어 넣는 것
		
		// * 카멜 표기법 : 연결되는 두 단어 중 후속단어의 첫 문자를 대문자
		
		boolean booleanData;
		// 메모리에 논값(t/f)을 저장한 공간을 1byte 할당하고
		// 할당된 공간을 booleanData 라고 부르겠ㄷ
		
		booleanData = true;
		
	}

}