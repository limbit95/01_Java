package edu.kh.basic;


// 주석 : 컴파일러(번역기)가 해석하지 않는 부분

// class : 자바 코드가 작성되는 영역

public class JavaTest {
	public static void main(String[] args) {
		// main method(메서드) : 자바 애플리케이션(프로그램)을 실행하기 위해 반드시 필요
		
		System.out.println("Hello Worlds");
		
		// 숫자 연산
		System.out.println("1 + 2");
		System.out.println(1 +2);
		
		// ""(문자열) + 숫자 함께 작성
		System.out.println("14 * 19 = " + 266, 2);
		System.out.println("14 * 19 = " + 14*19);
		
		System.out.println("90 + 70 + 65 = " + (90+70+65));
		
		// 자바는 사칙연산의 우선순위를 그대로 따른다
		// -> 우선 계산을 원하면 () 괄호 사용
		
		// + 기호의 역할
		//   - 숫자 + 숫자 = 덧셈 연산 결과
		//	 - (문자열 + 숫자) or (문자열 + 문자열 = 이어쓰기
		
	}
}